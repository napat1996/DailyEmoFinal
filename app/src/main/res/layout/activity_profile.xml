<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:background="@color/white">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#e2e2e2">

        <Button
            android:id="@+id/btn_home"
            android:layout_width="50sp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="27sp"
            android:background="@drawable/menu_daily" />

        <Button
            android:id="@+id/btn_summary"
            android:layout_width="50sp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="110sp"
            android:background="@drawable/dash" />

        <Button
            android:id="@+id/btn_suggestion"
            android:layout_width="50sp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="110sp"
            android:background="@drawable/line" />

        <Button
            android:id="@+id/btn_profile"
            android:layout_width="50sp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="27sp"
            android:background="@drawable/user1" />

    </RelativeLayout>

    <!--end nav bar-->

    <ImageView
        android:id="@+id/image_profile"
        android:layout_width="115dp"
        android:layout_height="104dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        app:srcCompat="@drawable/prof" />

    <TextView
        android:id="@+id/textView_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="161dp"
        android:text="Username"
        android:textSize="15sp"/>



    <TextView
        android:id="@+id/textView_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView_username"
        android:layout_marginTop="206dp"
        android:text="Password"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/textView_confirm_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView_username"
        android:layout_marginTop="251dp"
        android:text="Confirm password"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/textView_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView_username"
        android:layout_marginTop="296dp"
        android:text="E-mail"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/textView_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edit_gender"
        android:layout_alignStart="@+id/textView_username"
        android:text="Gender"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView_birthDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView_username"
        android:layout_marginBottom="197dp"
        android:text="Birth of Date"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/edit_birth_of_date"
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView_birthDate"
        android:layout_alignParentStart="true"
        android:layout_marginStart="125dp"
        android:ems="10"
        android:hint="YYYY-MM-DD"
        android:inputType="date"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/image_profile"
        android:layout_alignTop="@+id/textView_gender"
        android:text="Age"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edit_weight"
        android:layout_alignStart="@+id/textView_username"
        android:text="Weight"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView_high"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView_age"
        android:layout_alignTop="@+id/textView_weight"
        android:text="High"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/edit_username"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView_username"
        android:layout_toEndOf="@+id/textView_birthDate"
        android:ems="10"
        android:hint="username"
        android:inputType="textPersonName"
        android:textAlignment="textStart" />

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView_password"

        android:layout_toEndOf="@+id/textView_birthDate"
        android:ems="10"
        android:hint="password"
        android:inputType="numberPassword"
        android:textAlignment="textStart" />

    <EditText
        android:id="@+id/edit_confirm_password"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView_confirm_password"
        android:layout_alignEnd="@+id/edit_email"
        android:ems="10"
        android:hint="confirm password"
        android:inputType="numberPassword" />

    <EditText
        android:id="@+id/edit_email"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/textView_birthDate"
        android:ems="10"
        android:hint="example@example.com"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/edit_gender"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edit_birth_of_date"
        android:layout_toEndOf="@+id/textView_birthDate"
        android:ems="10"
        android:hint="sex"
        android:inputType="textPersonName"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/edit_age"
        android:layout_width="54dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView_gender"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="75dp"
        android:ems="10"
        android:hint="years"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edit_weight"
        android:layout_width="77dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_birth_of_date"
        android:layout_toEndOf="@+id/textView_username"
        android:ems="10"
        android:hint="kg."
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edit_high"
        android:layout_width="77dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_birth_of_date"
        android:layout_toEndOf="@+id/edit_birth_of_date"
        android:ems="10"
        android:hint="cm."
        android:inputType="textPersonName" />



