            android:layout_width="96dp"
            android:layout_height="99dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="62dp"
            app:srcCompat="@drawable/emo_blushing" />

        <TextView
            android:id="@+id/text_steps"
            android:layout_width="72dp"
            android:layout_height="wrap_content"

            android:layout_alignBottom="@+id/img_mood"
            android:layout_gravity="center"
            android:layout_toStartOf="@+id/textView6"
            android:text="--"
            android:textAlignment="center"
            android:textColor="@color/main_text2"
            android:textSize="20sp" />


        <!--line-->
        <View
            android:layout_width="3dp"
            android:layout_height="370dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="45dp"
            android:background="@color/text" />

        <View
            android:layout_width="408dp"
            android:layout_height="3sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            android:layout_marginBottom="213dp"
            android:background="@color/text" />

        <TextView
            android:id="@+id/text_date"
            android:layout_width="143dp"
            android:layout_height="35dp"

            android:layout_above="@+id/textView6"
            android:layout_toStartOf="@+id/img_mood"
            android:text="Date"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="THASVARIN T."
            android:textColor="@color/text"
            android:textSize="25sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/text_hr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"

            android:layout_alignParentStart="true"
            android:layout_marginBottom="261dp"
            android:layout_marginStart="67dp"
            android:gravity="center_vertical"
            android:text="resting bpm" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/text_sleep"
            android:layout_alignTop="@+id/text_hr"
            android:gravity="center_vertical"
            android:text="minutes" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_mood"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="13dp"
            android:text="steps" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/text_hr"
            android:layout_alignParentTop="true"
            android:layout_marginTop="191dp"
            android:gravity="center_vertical"
            android:text="HEARTRATE" />

        <TextView
            android:id="@+id/textView_sleepp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/text_sleep"
            android:layout_alignTop="@+id/textView7"
            android:text="SLEEP" />

        <TextView
            android:id="@+id/text_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/text_activity"
            android:layout_toStartOf="@+id/heart_rate"
            android:text="TextView" />

        <TextView
            android:id="@+id/text_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/exercise_switch"
            android:layout_marginEnd="-76dp"
            android:layout_marginTop="-73dp"
            android:layout_toStartOf="@+id/buttom_hr"
            android:text="TextView" />

        <TextView
            android:id="@+id/text_goal_hr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="229dp"
            android:layout_toStartOf="@+id/img_mood"
            android:gravity="center_vertical"
            android:text="Average : 56 - 61 bpm"
            android:textColor="@color/main_text" />

        <TextView
            android:id="@+id/text_goal_sleep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/text_goal_hr"
            android:layout_toEndOf="@+id/img_mood"
            android:gravity="center_vertical"
            android:text="Average : 7 - 8 hours"
            android:textColor="@color/main_text" />

        <TextView
            android:id="@+id/text_incar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/heart_rate"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="175dp"
            android:text="IN CAR" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignStart="@+id/buttom_sleep"
            android:layout_alignTop="@+id/buttom_map2"
            app:srcCompat="@drawable/runnnn" />

        <TextView
            android:id="@+id/textView_exercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/buttom_sleep"
            android:layout_alignTop="@+id/text_incar"
            android:text="EXERCISE" />


        <Switch
            android:id="@+id/exercise_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/text_sleep"
            android:layout_marginBottom="73dp"
            android:gravity="center"
            android:textOff="Off"
            android:textOn="On" />

        <Button
            android:id="@+id/buttom_step"
            android:layout_width="31dp"
            android:layout_height="36dp"


            android:layout_alignEnd="@+id/text_goal_sleep"
