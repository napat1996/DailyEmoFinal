<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kmutt.dailyemofinal.MainActivity"
    android:background="#F0F0F0">

    <!--//nav bar-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="#e2e2e2">

            <Button
                android:id="@+id/btn_home"
                android:layout_width="39dp"
                android:layout_height="38dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="40dp"
                android:background="@drawable/ic_home_black_24dp" />

            <Button
                android:id="@+id/btn_summary"
                android:layout_width="39dp"
                android:layout_height="38dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="124dp"
                android:background="@drawable/ic_date_range_black_24dp" />

            <Button
                android:id="@+id/btn_suggestion"
                android:layout_width="39dp"
                android:layout_height="38dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="129dp"
                android:background="@drawable/ic_mood_black_24dp" />

            <Button
                android:id="@+id/btn_profile"
                android:layout_width="39dp"
                android:layout_height="38dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="40dp"
                android:background="@drawable/ic_people_white" />
            <!--end nav bar-->
        </RelativeLayout>

        <!--android:id="@+id/flcontent"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:background="@color/main_bg"-->
        <!--android:orientation="vertical">-->


        <TextView
            android:id="@+id/heart_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/buttom_sleep"
            android:layout_alignEnd="@+id/buttom_hr"
            android:text="--"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#afaa9e"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttom_hr"
            android:layout_width="116dp"
            android:layout_height="108dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="37dp"
            android:background="@drawable/icon_heart" />

        <Button
            android:id="@+id/buttom_sleep"
            android:layout_width="106dp"
            android:layout_height="105dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/buttom_hr"
            android:layout_marginEnd="33dp"
            android:background="@drawable/icon_moon" />

        <TextView
            android:id="@+id/text_sleep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/buttom_hr"
            android:layout_toStartOf="@+id/text_activity"
            android:text="--"
            android:textAlignment="center"
            android:textColor="#afaa9e"
            android:textSize="20sp" />


        <Button
            android:id="@+id/buttom_map2"
            android:layout_width="95dp"
            android:layout_height="99dp"
            android:layout_alignBottom="@+id/text_activity"
            android:layout_alignStart="@+id/buttom_sleep"
            android:background="@drawable/carr" />

        <Switch
            android:id="@+id/activity_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/text_sleep"
            android:layout_below="@+id/buttom_map2"
            android:gravity="center"
            android:textOff="Off"
            android:textOn="On" />
        <TextView
            android:id="@+id/text_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="84dp"
            android:layout_toStartOf="@+id/buttom_sleep"
            android:text="--"
            android:textAlignment="center"
            android:textColor="#afaa9e"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/text_activity"
            android:layout_marginStart="-73dp"
            android:layout_toEndOf="@+id/buttom_sleep"
            android:text="--"
            android:textAlignment="center"
            android:textColor="#afaa9e"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttom_step"
            android:layout_width="107dp"
            android:layout_height="88dp"
            android:layout_alignBottom="@+id/buttom_map2"
            android:layout_alignStart="@+id/buttom_hr"
            android:background="@drawable/icon_step" />


        <!--<Button-->
            <!--android:id="@+id/button_mood"-->
            <!--android:layout_width="141sp"-->
            <!--android:layout_height="150sp"-->
            <!--android:layout_alignParentTop="true"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_marginTop="17sp"-->
            <!--android:background="@drawable/logoja"-->
            <!--android:text="MOOD"-->
            <!--android:textColor="@color/white" />-->

        <ImageView
            android:id="@+id/img_mood"
            android:layout_width="141sp"
            android:layout_height="150sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17sp"
            app:srcCompat="@drawable/emo_blushing"
            />

        <TextView
            android:id="@+id/text_steps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/heart_rate"
            android:layout_alignTop="@+id/text_activity"
            android:text="--"
            android:textColor="#afaa9e"
            android:textSize="20sp" />

        <!--line-->
        <View
            android:layout_width="3sp"
            android:layout_height="293dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="43dp"
            android:background="@color/main_text2" />

        <View
            android:layout_width="356dp"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="181dp"
            android:background="@color/main_text2" />

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/img_mood"
            android:layout_gravity="center"
            android:background="@color/main_text2" />


        <!--<FrameLayout-->
        <!--android:id="@+id/flcontent"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:orientation="vertical">-->

        <!--</FrameLayout>-->

        <!--<android.support.design.widget.BottomNavigationView-->
        <!--android:id="@+id/main_nav"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="57sp"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:background="@color/white"-->
        <!--app:itemIconTint="@color/front"-->
        <!--app:itemTextColor="@color/front"-->
        <!--app:menu="@menu/buttom_nav">-->

        <!--</android.support.design.widget.BottomNavigationView>-->

    </RelativeLayout>






    <android.support.design.widget.NavigationView
        android:id="@+id/nnnv"
        app:headerLayout="@layout/header"
        android:layout_width="230dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:itemTextColor="@color/front"
        app:itemIconTint="@color/front"
        app:menu="@menu/drwermenu"
        android:layout_gravity="start"

        >
    </android.support.design.widget.NavigationView>





</android.support.v4.widget.DrawerLayout>
