<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kmutt.dailyemofinal.MainActivity"
    android:background="#F0F0F0">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="true"
        android:orientation="vertical">
        <!--//nav bar-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="#e2e2e2">

            <Button
                android:id="@+id/btn_home"
                android:layout_width="50sp"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="27sp"
                android:background="@drawable/menu_daily" />

            <Button
                android:id="@+id/btn_summary"
                android:layout_width="50sp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="110sp"
                android:background="@drawable/dash" />

            <Button
                android:id="@+id/btn_suggestion"
                android:layout_width="50sp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="110sp"
                android:background="@drawable/line" />

            <Button

                android:id="@+id/btn_profile"
                android:layout_width="50sp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="27sp"
                android:background="@drawable/user1" />
            <!--end nav bar-->
        </RelativeLayout>

        <!--android:id="@+id/flcontent"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:background="@color/main_bg"-->
        <!--android:orientation="vertical">-->


        <TextView
            android:id="@+id/heart_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/buttom_sleep"
            android:layout_marginStart="91dp"
            android:text="--"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#afaa9e"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttom_hr"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="62dp"
            android:layout_marginTop="213dp"
            android:background="@drawable/icon_heart" />

        <Button
            android:id="@+id/buttom_sleep"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/buttom_hr"
            android:layout_marginEnd="66dp"
            android:background="@drawable/icon_moon" />

        <TextView
            android:id="@+id/text_sleep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/heart_rate"
            android:layout_marginEnd="91dp"
            android:text="--"
            android:textAlignment="center"
            android:textColor="#afaa9e"
            android:textSize="20sp" />


        <Button
            android:id="@+id/buttom_map2"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_alignStart="@+id/buttom_sleep"
            android:layout_alignTop="@+id/buttom_step"
            android:background="@drawable/carr" />

        <Switch
            android:id="@+id/activity_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttom_map2"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="77dp"
            android:gravity="center"
            android:textOff="Off"
            android:textOn="On" />

        <TextView
            android:id="@+id/text_activity"
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttom_map2"
            android:layout_toStartOf="@+id/text_sleep"
            android:text="--"
            android:textAlignment="center"
            android:textColor="#afaa9e"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/buttom_sleep"
            android:layout_below="@+id/buttom_map2"
            android:text="--"
            android:textAlignment="center"
            android:textColor="#afaa9e"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttom_step"
            android:layout_width="60sp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/buttom_hr"
            android:layout_marginBottom="95dp"
            android:background="@drawable/icon_step" />


        <!--<Button-->
            <!--android:id="@+id/button_mood"-->
            <!--android:layout_width="141sp"-->
            <!--android:layout_height="150sp"-->
            <!--android:layout_alignParentTop="true"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_marginTop="17sp"-->
            <!--android:background="@drawable/logoja"-->
            <!--android:text="MOOD"-->
            <!--android:textColor="@color/white" />-->

        <ImageView
            android:id="@+id/img_mood"
            android:layout_width="84dp"
            android:layout_height="93dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="83dp"
            app:srcCompat="@drawable/emo_blushing" />

        <TextView
            android:id="@+id/text_steps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/heart_rate"
            android:layout_below="@+id/buttom_map2"
            android:text="--"
            android:textColor="#afaa9e"
            android:textSize="20sp" />


        <!--line-->
        <View
            android:layout_width="3sp"
            android:layout_height="250sp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="67sp"
            android:background="@color/main_text2" />

        <View
            android:layout_width="300sp"
            android:layout_height="3sp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="186dp"
            android:background="@color/main_text2" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="193sp"
            android:layout_height="90sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/dailyemoo" />


        <!--<FrameLayout-->
        <!--android:id="@+id/flcontent"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:orientation="vertical">-->

        <!--</FrameLayout>-->

        <!--<android.support.design.widget.BottomNavigationView-->
