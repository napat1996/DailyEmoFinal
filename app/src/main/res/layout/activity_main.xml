        <!--//nav bar-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="129dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#e1d6ce">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="#e2e2e2">

            <Button
                android:id="@+id/btn_home"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="27sp"
                android:background="@drawable/ihome" />

            <Button
                android:id="@+id/btn_summary"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="129dp"
                android:background="@drawable/igraph" />

            <Button
                android:id="@+id/btn_suggestion"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="127dp"
                android:background="@drawable/isus2" />

            <Button
                android:id="@+id/btn_profile"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="27sp"
                android:background="@drawable/iperson" />

        </RelativeLayout>


        <!--android:id="@+id/flcontent"-->
