<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kmutt.dailyemofinal.MainActivity">

    <!--//nav bar-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@color/blue">

            <Button
                android:id="@+id/btn_home"
                android:layout_width="39dp"
                android:layout_height="38dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="31dp"
                android:background="@drawable/ic_home_black_24dp" />

            <Button
                android:id="@+id/btn_summary"
                android:layout_width="39dp"
                android:layout_height="38dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="109dp"
                android:background="@drawable/ic_date_range_black_24dp" />

            <Button
                android:id="@+id/btn_suggestion"
                android:layout_width="39dp"
                android:layout_height="38dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="147dp"
                android:background="@drawable/ic_directions_car_black_24dp" />

            <Button
                android:id="@+id/btn_profile"
                android:layout_width="39dp"
                android:layout_height="38dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="40dp"
                android:background="@drawable/ic_person24dp" />
            <!--end nav bar-->
        </RelativeLayout>

            <!--android:id="@+id/flcontent"-->
