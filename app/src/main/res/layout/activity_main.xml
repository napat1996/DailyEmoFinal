<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kmutt.dailyemofinal.MainActivity"
    android:background="#F0F0F0">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="true"
        android:orientation="vertical">
        <!--//nav bar-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="116dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/main_bg">

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="#e2e2e2">

            <Button
                android:id="@+id/btn_home"
                android:layout_width="50sp"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="27sp"
                android:background="@drawable/menu" />

            <Button
                android:id="@+id/btn_summary"
                android:layout_width="50sp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="110sp"
                android:background="@drawable/dash" />

            <Button
                android:id="@+id/btn_suggestion"
                android:layout_width="50sp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="110sp"
                android:background="@drawable/line" />

            <Button

                android:id="@+id/btn_profile"
                android:layout_width="50sp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="27sp"
                android:background="@drawable/user1" />
            <!--end nav bar-->
        </RelativeLayout>

        <!--android:id="@+id/flcontent"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:background="@color/main_bg"-->
        <!--android:orientation="vertical">-->


        <TextView
            android:id="@+id/heart_rate"
            android:layout_width="38dp"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginStart="80dp"
            android:layout_marginTop="246dp"
            android:text="50"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/main_text2"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttom_hr"
            android:layout_width="55sp"
            android:layout_height="55sp"
            android:layout_alignEnd="@+id/text_steps"
            android:layout_alignTop="@+id/buttom_sleep"
            android:background="@drawable/icon_heart" />

        <Button
            android:id="@+id/buttom_sleep"
            android:layout_width="55sp"
            android:layout_height="55sp"
            android:layout_alignEnd="@+id/activity_switch"
            android:layout_alignParentTop="true"
            android:layout_marginTop="184dp"
            android:background="@drawable/icon_moon" />

        <TextView
            android:id="@+id/text_sleep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/activity_switch"

            android:layout_alignTop="@+id/heart_rate"
            android:layout_gravity="center"
            android:layout_marginStart="2dp"
            android:text="238"
            android:textAlignment="center"
            android:textColor="@color/main_text2"
            android:textSize="20sp" />


        <Button
            android:id="@+id/buttom_map2"
            android:layout_width="55sp"
            android:layout_height="55sp"
            android:layout_alignStart="@+id/buttom_sleep"
            android:layout_alignTop="@+id/buttom_step"
            android:background="@drawable/carr" />

        <Switch
            android:id="@+id/activity_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="113dp"
            android:layout_marginEnd="80dp"
            android:gravity="center"
            android:textOff="Off"
            android:textOn="On" />

        <Button
            android:id="@+id/buttom_step"
            android:layout_width="55sp"
            android:layout_height="55sp"
            android:layout_alignEnd="@+id/heart_rate"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="149dp"
            android:background="@drawable/icon_step" />


        <!--<Button-->
            <!--android:id="@+id/button_mood"-->
            <!--android:layout_width="141sp"-->
            <!--android:layout_height="150sp"-->
            <!--android:layout_alignParentTop="true"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_marginTop="17sp"-->
            <!--android:background="@drawable/logoja"-->
            <!--android:text="MOOD"-->
            <!--android:textColor="@color/white" />-->

        <ImageView
            android:id="@+id/img_mood"
            android:layout_width="84dp"
            android:layout_height="93dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="54dp"
            app:srcCompat="@drawable/emo_blushing" />

        <TextView
            android:id="@+id/text_steps"
            android:layout_width="72dp"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/activity_switch"
            android:layout_gravity="center"
            android:layout_marginStart="53dp"
            android:text="--"
            android:textAlignment="center"
            android:textColor="@color/main_text2"
            android:textSize="20sp" />


        <!--line-->
        <View
            android:layout_width="3dp"
            android:layout_height="411dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="45dp"
            android:background="@color/main_text2" />

        <View
            android:layout_width="408dp"
            android:layout_height="3sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            android:layout_marginBottom="251dp"
            android:background="@color/main_text2" />

        <TextView
            android:id="@+id/text_date"
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Date"
            android:textColor="@color/main_text2"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/img_mood"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-54dp"
            android:text="THASVARIN T."
            android:textColor="#FFFF"
            android:textSize="25sp"
            android:textStyle="bold" />



        <TextView
            android:id="@+id/text_hr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/buttom_step"

            android:layout_below="@+id/heart_rate"
            android:gravity="center_vertical"
            android:text="resting bpm" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/activity_switch"
            android:layout_below="@+id/heart_rate"
            android:gravity="center_vertical"
            android:text="minutes" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/buttom_hr"
            android:layout_below="@+id/activity_switch"
            android:layout_marginTop="-113dp"
            android:text="steps" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/buttom_step"
            android:layout_marginTop="155dp"
            android:gravity="center_vertical"
            android:text="HEARTRATE" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/text_sleep"
            android:layout_alignTop="@+id/textView7"
            android:text="SLEEP" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/buttom_hr"
            android:layout_marginBottom="213dp"
            android:text="STEPS" />

        <TextView
            android:id="@+id/text_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:layout_toEndOf="@+id/img_mood"
            android:text="TextView" />

        <TextView
            android:id="@+id/text_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView17"
            android:layout_below="@+id/textView6"
            android:text="TextView" />

        <TextView
            android:id="@+id/text_goal_hr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="280dp"
            android:layout_toStartOf="@+id/img_mood"
            android:text="Average : 56 - 61 bpm"
            android:gravity="center_vertical"
            android:textColor="@color/main_text"/>

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/text_goal_hr"
            android:layout_toEndOf="@+id/img_mood"
            android:gravity="center_vertical"
            android:text="Average : 7 - 8 hours"
            android:textColor="@color/main_text" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/text_map"
            android:layout_marginStart="41dp"
            android:text="Average : 1000 steps"
            android:textColor="@color/main_text" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/buttom_sleep"
            android:layout_alignTop="@+id/textView11"
            android:text="IN CAR ?" />


