    <LinearLayout
        android:id="@+id/a3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_profile"
            android:layout_width="115dp"
            android:layout_height="104dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/prof" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/b3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/a3"
        android:layout_marginStart="30dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/textView_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textColor="#79593b"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_username"
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:hint="username"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/c3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/b3"
        android:layout_marginStart="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="password"
            android:textColor="#79593b"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_password"
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:hint="password"
            android:textSize="15sp"
            android:layout_marginStart="33dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/d3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/c3"
        android:layout_marginStart="30dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView_confirm_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Confirm password"
            android:textColor="#79593b"
            android:textSize="15sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/edit_confirm_password"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:hint="confirm password"
            android:textSize="15sp"
            android:layout_marginStart="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/e3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/d3"
        android:layout_marginStart="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-mail"
            android:textColor="#79593b"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_email"
            android:layout_width="218dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="58dp"
            android:hint="example@example.com"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/f3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/e3"
        android:layout_marginStart="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_birthDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Birth of Date"
            android:textColor="#79593b"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="YYYY-MM-DD"
            android:textSize="15sp"
            android:layout_marginStart="15dp"    />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/h3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/f3"
        android:layout_marginStart="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textColor="#79593b"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="sex"
            android:textSize="15sp"
            android:layout_marginStart="24dp"/>

        <TextView
            android:id="@+id/textView_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age"
            android:textColor="#79593b"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginStart="50dp"/>

        <EditText
            android:id="@+id/edit_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="years"
            android:textSize="15sp"
            android:layout_marginStart="46dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/g3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/h3"
        android:layout_marginStart="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="weight"
            android:textColor="#79593b"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="29dp"
            android:hint="(kg.)"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView_high"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:text="Height"
            android:textColor="#79593b"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_high"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:hint="(cm.)"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/i3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/g3"
        android:layout_marginStart="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Heart rate percentage increase"
            android:textColor="#79593b"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_percenincrease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="10%"
            android:textSize="15sp"
            android:layout_marginStart="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/k3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/i3"
        android:layout_marginStart="30dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">


        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(* Heart rate percentage increase he function that allows the user \n to adjust the percentage of stress depend on his/her demand."
            android:textSize="10sp" />


    </LinearLayout>

