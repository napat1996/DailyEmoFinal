<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GraphHr"
    android:background="#F0F0F0"
    android:id="@+id/mainlayout"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            

      <TextView
          android:layout_width="match_parent"
          android:layout_height="50sp"
          android:background="#e1d6ce"
          android:textColor="#FFFF"
          android:text="Heart Rate"
          android:textAlignment="center"
          android:textSize="28sp"

          />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/linechart_hr"
        android:layout_width="match_parent"
        android:layout_height="270sp"
        android:layout_weight="1"
        android:background="#e1d6ce">
    </com.github.mikephil.charting.charts.LineChart>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:textColor="@color/text"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="This Week"
        android:textSize="20sp"
/>


     <TextView
         android:id="@+id/day1"
         android:layout_width="match_parent"
         android:layout_height="13dp"
         android:text="DD-MM-YYYY"
         android:textSize="10sp"
         android:textColor="@color/text"/>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/linechart_hr1"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:layout_weight="1"
        android:background="#F0F0F0">
    </com.github.mikephil.charting.charts.LineChart>

    <TextView
        android:id="@+id/day2"
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:textColor="@color/text"
        android:text="DD-MM-YYYY"
        android:textSize="10sp"
        />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/linechart_hr2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="1"
        android:background="#F0F0F0">
    </com.github.mikephil.charting.charts.LineChart>

            <TextView
                 android:id="@+id/day3"
                android:layout_width="match_parent"
                android:layout_height="13dp"
                android:textColor="@color/text"
                android:text="DD-MM-YYYY"
                android:textSize="10sp"/>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/linechart_hr3"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:background="#F0F0F0"
                >
            </com.github.mikephil.charting.charts.LineChart>

            <TextView
                android:id="@+id/day4"
                android:layout_width="match_parent"
                android:layout_height="13dp"
                android:textSize="10sp"
                android:text="DD-MM-YYYY"
                android:textColor="@color/text"/>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/linechart_hr4"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:background="#F0F0F0">
            </com.github.mikephil.charting.charts.LineChart>

            <TextView
                android:id="@+id/day5"
                android:layout_width="match_parent"
                android:layout_height="13sp"
                android:textColor="@color/text"
                android:text="DD-MM-YYYY"
                android:textSize="10sp"
                />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/linechart_hr5"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:background="#F0F0F0">
            </com.github.mikephil.charting.charts.LineChart>

            <TextView
                android:id="@+id/day6"
                android:layout_width="match_parent"
                android:layout_height="13sp"
                android:textSize="10sp"
                android:text="DD-MM-YYYY"
                android:textColor="@color/text"
                />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/linechart_hr6"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:background="#F0F0F0">
            </com.github.mikephil.charting.charts.LineChart>

            <TextView
                android:id="@+id/day7"
                android:layout_width="match_parent"
                android:layout_height="13sp"
                android:textColor="@color/text"
                android:textSize="10sp"
                android:text="DD-MM-YYYY"/>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/linechart_hr7"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:background="#F0F0F0">
            </com.github.mikephil.charting.charts.LineChart>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50sp">

            </LinearLayout>


        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#e2e2e2">

        <Button
            android:id="@+id/btn_home"
            android:layout_width="33dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:background="@drawable/ho" />

        <Button
            android:id="@+id/btn_summary"
            android:layout_width="33sp"
            android:layout_height="30sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginStart="65dp"
            android:background="@drawable/statistics" />

        <Button
            android:id="@+id/btn_suggestion"
            android:layout_width="33sp"
            android:layout_height="29dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginLeft="65dp"
            android:background="@drawable/iiii" />

        <Button
            android:id="@+id/btn_profile"
            android:layout_width="33sp"
            android:layout_height="29sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginStart="50sp"
            android:background="@drawable/ue" />

    </LinearLayout>


</RelativeLayout>

