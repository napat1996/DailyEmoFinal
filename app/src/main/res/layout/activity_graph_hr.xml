<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GraphHr"
    android:background="#F0F0F0"
    android:id="@+id/mainlayout"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="#F0F0F0"
                android:text="Heart Rate"
                android:textAlignment="center"
                android:textColor="#b35656"
                android:textSize="30sp"
                android:textStyle="bold"

                />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"

           >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today :"
                android:textSize="13sp"
                android:layout_marginStart="18dp"
                android:textStyle="bold"
                android:textColor="#1d3174"/>
            <TextView
                android:id="@+id/text_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:text="date"
                android:textColor="#1d3174"
                android:textSize="13sp"
                android:textStyle="bold" />

        </LinearLayout>


            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/linechart_hr"
                android:layout_width="339dp"
                android:layout_height="204dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#e1d6ce">

            </com.github.mikephil.charting.charts.LineChart>




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="✿This Week✿"
                android:textAlignment="center"
                android:textColor="#796262"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>


            <TextView
                android:id="@+id/day1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DD-MM-YYYY"
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                android:textColor="#1d3174"
                android:textSize="14sp"
                android:layout_marginBottom="10dp"/>



            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/linechart_hr1"
                android:layout_width="339dp"
                android:layout_height="204dp"
                android:layout_weight="1"
                android:background="#eaeaea"
                android:layout_gravity="center">

            </com.github.mikephil.charting.charts.LineChart>



    <TextView
        android:id="@+id/day2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#1d3174"
        android:text="DD-MM-YYYY"
        android:textSize="14sp"
        android:layout_marginStart="20dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        />



    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/linechart_hr2"
        android:layout_width="339dp"
        android:layout_height="204dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="#eaeaea">
    </com.github.mikephil.charting.charts.LineChart>



            <TextView
                 android:id="@+id/day3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#1d3174"
                android:text="DD-MM-YYYY"
                android:textSize="14sp"
                android:layout_marginStart="20dp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"/>



            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/linechart_hr3"
                android:layout_width="339dp"
                android:layout_height="204dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#eaeaea"
                >
            </com.github.mikephil.charting.charts.LineChart>

            <TextView
                android:id="@+id/day4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="DD-MM-YYYY"
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                android:textColor="#1d3174"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"/>



            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/linechart_hr4"
                android:layout_width="339dp"
                android:layout_height="204dp"
                android:layout_weight="1"
                android:background="#eaeaea"
                android:layout_gravity="center">
            </com.github.mikephil.charting.charts.LineChart>



            <TextView
                android:id="@+id/day5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#1d3174"
                android:text="DD-MM-YYYY"
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                android:textSize="14sp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                />


            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/linechart_hr5"
                android:layout_width="339dp"
                android:layout_height="204dp"
                android:layout_weight="1"
                android:background="#eaeaea"
                android:layout_gravity="center">
            </com.github.mikephil.charting.charts.LineChart>



            <TextView
                android:id="@+id/day6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="DD-MM-YYYY"
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                android:textColor="#1d3174"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                />


            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/linechart_hr6"
                android:layout_width="339dp"
                android:layout_height="204dp"
                android:layout_weight="1"
                android:background="#eaeaea"
                android:layout_gravity="center">
            </com.github.mikephil.charting.charts.LineChart>



            <TextView
                android:id="@+id/day7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginStart="20dp"
                android:text="DD-MM-YYYY"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"/>


            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/linechart_hr7"
                android:layout_width="339dp"
                android:layout_height="204dp"
                android:layout_weight="1"
                android:background="#eaeaea"
                android:layout_gravity="center"
                android:layout_marginBottom="65dp">
            </com.github.mikephil.charting.charts.LineChart>




        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#e2e2e2">

        <Button
            android:id="@+id/btn_home"
            android:layout_width="33dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginStart="40dp"
            android:layout_marginTop="-1sp"
            android:background="@drawable/ho" />

        <Button
            android:id="@+id/btn_summary"
            android:layout_width="33sp"
            android:layout_height="30sp"
            android:layout_marginTop="-1sp"
            android:layout_gravity="center"
            android:layout_marginStart="65dp"
            android:background="@drawable/statistics" />

        <Button
            android:id="@+id/btn_suggestion"
            android:layout_width="33sp"
            android:layout_height="29dp"
            android:layout_marginTop="-1sp"
            android:layout_gravity="center"
            android:layout_marginStart="65dp"
            android:background="@drawable/iiii" />

        <Button
            android:id="@+id/btn_profile"
            android:layout_width="33sp"
            android:layout_height="29sp"
            android:layout_marginTop="-1sp"
            android:layout_gravity="center"
            android:layout_marginStart="50sp"
            android:background="@drawable/ue" />

    </LinearLayout>


</RelativeLayout>

