<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    tools:context=".CalendarActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Stress Level"
                android:textAlignment="center"
                android:textColor="#a42455"
                android:textSize="30sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:text="Today :"
                    android:textColor="##1d3174"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="17dp"
                    android:text="date"
                    android:textColor="##1d3174"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/pieChart"
                android:layout_width="339dp"
                android:layout_height="204dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#e1d6ce">

            </com.github.mikephil.charting.charts.LineChart>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="✿This Week✿"
                android:textAlignment="center"
                android:textColor="#796262"
                android:textSize="17sp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/day_s1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="20dp"
                android:text="18-10-2018"
                android:textColor="#1d3174"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/pieChart1"
                android:layout_width="339dp"
                android:layout_height="204dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#ededed">

            </com.github.mikephil.charting.charts.LineChart>


            <TextView
                android:id="@+id/day_s2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="18-10-2018"
                android:textColor="#1d3174"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/pieChart2"
                android:layout_width="339dp"
                android:layout_height="204dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#ededed">

            </com.github.mikephil.charting.charts.LineChart>


            <TextView
                android:id="@+id/day_s3"
