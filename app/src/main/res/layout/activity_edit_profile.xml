<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfileActivity"
    android:background="#f9f8f7">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#e2e2e2">

        <Button
            android:id="@+id/btn_home"
            android:layout_width="33dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:background="@drawable/ho" />

        <Button
            android:id="@+id/btn_summary"
            android:layout_width="33sp"
            android:layout_height="30sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginStart="65dp"
            android:background="@drawable/statistics" />

        <Button
            android:id="@+id/btn_suggestion"
            android:layout_width="33sp"
            android:layout_height="29dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginLeft="65dp"
            android:background="@drawable/iiii" />

        <Button
            android:id="@+id/btn_profile"
            android:layout_width="33sp"
            android:layout_height="29sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginStart="50sp"
            android:background="@drawable/ue" />

    </LinearLayout>


    <!--end nav bar-->

    <LinearLayout
        android:id="@+id/a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_edit_profile"
            android:layout_width="115dp"
            android:layout_height="104dp"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="35dp"
            app:srcCompat="@drawable/prof" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/a"
        android:layout_marginStart="30dp"
        android:orientation="horizontal">

        <TextView
        android:id="@+id/textView_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textColor="#79593b"
        android:textSize="15sp"
        android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_username"
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:hint="username"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/b"
        android:layout_marginStart="30dp"
        android:orientation="horizontal">

        <TextView
        android:id="@+id/textView_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="password"
        android:textColor="#79593b"
        android:textSize="15sp"
        android:textStyle="bold" />

        <EditText
        android:id="@+id/edit_password"
        android:layout_width="179dp"
        android:layout_height="wrap_content"
        android:hint="password"
        android:textSize="15sp"
        android:layout_marginStart="33dp"/>
        </LinearLayout>

    <LinearLayout
        android:id="@+id/d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/c"
        android:layout_marginStart="30dp"
        android:orientation="horizontal">
        <TextView
        android:id="@+id/textView_confirm_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Confirm password"
        android:textColor="#79593b"
        android:textSize="15sp"
        android:textStyle="bold" />


        <EditText
            android:id="@+id/edit_confirm_password"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:hint="confirm password"
            android:textSize="15sp"
            android:layout_marginStart="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/e"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/d"
        android:layout_marginStart="30dp"
        android:orientation="horizontal">

        <TextView
        android:id="@+id/textView_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-mail"
        android:textColor="#79593b"
        android:textSize="15sp"
        android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_email"
            android:layout_width="218dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="58dp"
            android:hint="example@example.com"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/e"
        android:layout_marginStart="30dp"
        android:orientation="horizontal">

        <TextView
        android:id="@+id/textView_birthDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Birth of Date"
        android:textColor="#79593b"
        android:textSize="15sp"
        android:textStyle="bold" />

        <EditText
        android:id="@+id/edit_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="YYYY-MM-DD"
        android:textSize="15sp"
        android:layout_marginStart="15dp"    />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/f"
        android:layout_marginStart="30dp"
        android:orientation="horizontal">

        <TextView
        android:id="@+id/textView_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:textColor="#79593b"
        android:textSize="15sp"
        android:textStyle="bold" />

        <EditText
        android:id="@+id/edit_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="sex"
        android:textSize="15sp"
        android:layout_marginStart="24dp"/>

        <TextView
            android:id="@+id/textView_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age"
            android:textColor="#79593b"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginStart="50dp"/>

        <EditText
            android:id="@+id/edit_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="years"
            android:textSize="15sp"
            android:layout_marginStart="46dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/g"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/h"
        android:layout_marginStart="30dp"
        android:orientation="horizontal">

        <TextView
        android:id="@+id/textView_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="weight"
        android:textColor="#79593b"
        android:textSize="15sp"
        android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="29dp"
            android:hint="(kg.)"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView_high"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:text="Height"
            android:textColor="#79593b"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_high"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:hint="(cm.)"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/i"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/g"
        android:layout_marginStart="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Heart rate percentage increase"
            android:textColor="#79593b"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_percenincrease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="10%"
            android:textSize="15sp"
            android:layout_marginStart="30dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/save_profile"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="54dp"
        android:text="SAVE" />


