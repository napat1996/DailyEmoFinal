<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kmutt.dailyemofinal.MainActivity">




    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/flcontent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#d3e3ea"
        >


        <TextView
            android:id="@+id/heart_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/buttom_hr"
            android:layout_marginStart="81sp"
            android:text="3000"
            android:textAllCaps="true"
            android:textColor="#3A727F"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttom_hr"
            android:layout_width="108sp"
            android:layout_height="70sp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="52sp"
            android:background="@drawable/loogoo"
            android:onClick="changePageHR"

            />

        <Button
            android:id="@+id/buttom_sleep"
            android:layout_width="108sp"
            android:layout_height="70sp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="52sp"
            android:background="@drawable/loogoo"
            android:onClick="changePageSleep" />

        <TextView
            android:id="@+id/text_sleep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/heart_rate"
            android:layout_marginEnd="57dp"
            android:text="8hr 30 min"
            android:textColor="#3A727F"
            android:textSize="20sp" />


        <Button
            android:id="@+id/buttom_map2"
            android:layout_width="108dp"
            android:layout_height="70dp"
            android:layout_alignStart="@+id/buttom_sleep"
            android:layout_alignTop="@+id/buttom_step"
            android:background="@drawable/loogoo"
            android:onClick="changePageMap" />

        <Button
            android:id="@+id/buttom_step"
            android:layout_width="108sp"
            android:layout_height="70sp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/buttom_hr"
            android:layout_marginBottom="79sp"
            android:background="@drawable/loogoo"
            android:onClick="changePageStep" />


        <Button
            android:id="@+id/button_mood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="69dp"
            android:background="@drawable/circle"
            android:onClick="changePageCalendar"
            android:text="MOOD"/>

        <TextView
            android:id="@+id/text_steps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/buttom_hr"
            android:layout_below="@+id/buttom_map2"
            android:text="3,049 steps"
            android:textColor="#3A727F"
            android:textSize="20sp" />


    </RelativeLayout>






</android.support.v4.widget.DrawerLayout>
