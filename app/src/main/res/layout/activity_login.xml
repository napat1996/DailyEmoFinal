<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@drawable/bggggg"

    >


    <LinearLayout
        android:layout_width="265dp"
        android:layout_height="109dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="181dp"
        android:background="@drawable/rouded_button_tran_white">


    </LinearLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="178dp"
        android:layout_height="177dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:src="@drawable/loogoo" />

    <EditText
        android:id="@+id/inputUsername"
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="188dp"
        android:backgroundTint="#b6babc"
        android:drawableLeft="@drawable/ic_person24dp"
        android:ems="10"
        android:hint="USERNAME"
        android:inputType="textPersonName"
        android:textColorHint="#b6babc" />

    <EditText
        android:id="@+id/inputPassword"
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputUsername"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#b6babc"
        android:drawableLeft="@drawable/ic_lock_24dp"
        android:ems="10"
        android:hint="PASSWORD"
        android:inputType="textPassword"
        android:textColorHint="#b6babc" />

    <Button
        android:id="@+id/log_in_button"
        android:layout_width="103dp"
        android:layout_height="38dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="126dp"
        android:background="@drawable/rounded_button"
        android:elevation="0dp"
        android:text="SIGN IN"
        android:textColor="#4789E8"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/createNewAccount"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:text="Create a new account"
        android:textColor="#FFFF"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="79dp"
        android:text="Forgot your password?"
        android:textColor="#fff"
        android:textSize="15dp" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/inputUsername"
        android:layout_marginBottom="178dp"
        android:buttonTint="#FFFF"
        android:outlineSpotShadowColor="@color/white"
        android:text="Remember Me"
        android:textColor="#FFFF"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="49dp"
        android:text="or"
        android:textColor="@color/white" />


</RelativeLayout>

